pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-east-1' //Updated to match your actual region
    }

    stages {
        stage('Clone Terraform Repo') {
            steps {
                echo 'Cloning Terraform repo...'
                checkout([$class: 'GitSCM', branches: [[name: '*/main']],
                          userRemoteConfigs: [[url: 'https://github.com/riteshbehal/TerraForm.git']]])
            }
        }

        stage('Terraform Init') {
            steps {
                dir('s3') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('s3') {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply or Destroy') {
            steps {
                dir('s3') {
                    script {
                        echo "Applying Terraform to create bucket: my-terra-bucket"
                        sh 'terraform apply --auto-approve'
                    }
                }
            }
        }
    }
}
