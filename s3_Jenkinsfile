pipeline {
    agent any

    parameters {
        string(name: 'BUCKET_NAME', defaultValue: 'my-jenkins-bucket', description: 'Enter the S3 bucket name')
    }

    environment {
        TF_VAR_bucket_name = "${params.BUCKET_NAME}"
        TF_VAR_aws_region = "us-east-1"
    }

    stages {
        stage('Clone Terraform Repo') {
            steps {
                echo "Cloning Terraform repo..."
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/main']],
                          extensions: [],
                          userRemoteConfigs: [[url: 'https://github.com/riteshbehal/TerraForm.git']]
                ])
            }
        }

        stage('Terraform Init') {
            steps {
                dir('s3') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('s3') {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply or Destroy') {
            steps {
                dir('s3') {
                    script {
                        if (params.BUCKET_NAME) {
                            echo "Applying Terraform to create bucket: ${params.BUCKET_NAME}"
                            sh 'terraform apply --auto-approve'
                        }
                    }
                }
            }
        }
    }
}
