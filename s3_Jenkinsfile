pipeline {
    agent any

    parameters {
        string(name: 'BUCKET_NAME', defaultValue: 'my-custom-jenkins-bucket', description: 'Enter S3 Bucket Name')
    }

    environment {
        TF_VAR_bucket_name = "${params.BUCKET_NAME}"
        TF_VAR_aws_region = "us-east-1"
    }

    stages {
        stage('Terraform Init') {
            steps {
                dir('terraform/s3') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('terraform/s3') {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform/s3') {
                    sh 'terraform apply --auto-approve'
                }
            }
        }

        stage('Terraform Destroy') {
            when {
                expression { return params.BUCKET_NAME != '' }
            }
            steps {
                dir('terraform/s3') {
                    input message: "Do you want to destroy bucket: ${params.BUCKET_NAME}?"
                    sh 'terraform destroy --auto-approve'
                }
            }
        }
    }
}
